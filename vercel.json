{
  "rewrites": [
    {
      "source": "/api/markdown",
      "destination": "/api/server.js"
    },
    {
      "source": "/:path*",
      "has": [
        {
          "type": "query",
          "key": "markdown",
          "value": "true"
        }
      ],
      "destination": "/api/server.js"
    },
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ]
}
